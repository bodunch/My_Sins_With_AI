<Window x:Class="MySins.MessageErrorSomethigWithGemini"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MySins"
        mc:Ignorable="d"
        Title="MessageErrorSomethigWithGemini" Height="250" Width="450"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#f3ba00">
    <Window.Resources>
        <Style TargetType="Button" x:Key="HoverButton">
            <Setter Property="Background" Value="#CC757575"/>
            <Setter Property="Foreground" Value="#FF382D15"/>
            <Setter Property="BorderBrush" Value="#CC4E4E4E"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Heavy"/>
            <Setter Property="FontFamily" Value="Consolas"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                x:Name="border"
                Background="{TemplateBinding Background}"
                CornerRadius="10"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#99757575"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#99757575"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome
        CaptionHeight="250"
        ResizeBorderThickness="0"
        GlassFrameThickness="0"
        CornerRadius="15"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <Button
        Grid.Column="2"
        Grid.Row="0"
        Style="{StaticResource HoverButton}"
        Width="30"
        Height="30"
        Margin="0, 5, 5, 0"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Content="X"
        WindowChrome.IsHitTestVisibleInChrome="True"
        Click="CloseWindow"/>

        <TextBlock
        Grid.Column="1"
        Grid.Row="1"
        Text="Something happened to your AI assistant. Check if you installed it correctly by following the "
        TextWrapping="Wrap"
        TextAlignment="Center"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        FontSize="17"
        FontFamily="Consolas"
        FontWeight="Heavy"
        Foreground="#FF382D15"/>

        <TextBlock
        Grid.Column="1"
        Grid.Row="1"
        TextWrapping="Wrap"
        TextAlignment="Center"
        HorizontalAlignment="Right"
        VerticalAlignment="Center"
        FontSize="17"
        FontFamily="Consolas"
        FontWeight="Heavy"
        Foreground="#FF382D15"
        Margin="0, 6, 30 , 0"
        WindowChrome.IsHitTestVisibleInChrome="True">
        <Hyperlink RequestNavigate="Hyperlink_RequestNavigate" NavigateUri="https://github.com/bodunch/My_Sins_With_AI">link</Hyperlink>
        </TextBlock>

        <TextBlock
        Grid.Column="1"
        Grid.Row="1"
        Text="Or check your limits at this"
        TextWrapping="Wrap"
        TextAlignment="Center"
        HorizontalAlignment="Center"
        VerticalAlignment="Bottom"
        Margin="0, 0, 0 ,18"
        FontSize="17"
        FontFamily="Consolas"
        FontWeight="Heavy"
        Foreground="#FF382D15"/>

        <TextBlock
        Grid.Column="1"
        Grid.Row="1"
        TextWrapping="Wrap"
        TextAlignment="Center"
        HorizontalAlignment="Center"
        VerticalAlignment="Bottom"
        FontSize="17"
        FontFamily="Consolas"
        FontWeight="Heavy"
        Foreground="#FF382D15"
        Margin="0, 0, 30 , 0"
        WindowChrome.IsHitTestVisibleInChrome="True">
        <Hyperlink RequestNavigate="Hyperlink_RequestNavigate" NavigateUri="https://ai.dev/rate-limit">link</Hyperlink>
        </TextBlock>

        <Button
        Grid.Column="1"
        Grid.Row="3"
        Style="{StaticResource HoverButton}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Content="Ok"
        Click="CloseWindow"
        WindowChrome.IsHitTestVisibleInChrome="True"
        Width="150"/>
    </Grid>
</Window>
