<Window x:Class="MySins.IsNotRealApiKey"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MySins"
        mc:Ignorable="d"
        Title="IsNotRealApiKey" Height="250" Width="450"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#f3ba00">

    <Window.Resources>
        <Style TargetType="Button" x:Key="HoverButton">
            <Setter Property="Background" Value="#CC757575"/>
            <Setter Property="Foreground" Value="#FF382D15"/>
            <Setter Property="BorderBrush" Value="#CC4E4E4E"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Heavy"/>
            <Setter Property="FontFamily" Value="Consolas"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                x:Name="border"
                Background="{TemplateBinding Background}"
                CornerRadius="10"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#99757575"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#99757575"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="250"
            ResizeBorderThickness="0"
            GlassFrameThickness="0"
            CornerRadius="15"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Column="1"
            Grid.Row="1"
            Text="This is not a valid API key. Please try again."
             TextWrapping="Wrap"
             TextAlignment="Center"
             HorizontalAlignment="Center"
             VerticalAlignment="Bottom"
             FontSize="17"
             FontFamily="Consolas"
             FontWeight="Heavy"
             Foreground="#FF382D15"/>

        <Button
            Grid.Column="1"
            Grid.Row="3"
            Content="Ok"
            Style="{StaticResource HoverButton}"
            Width="200"
            Height="40"
            Click="CloseWindow"
            WindowChrome.IsHitTestVisibleInChrome="True"/>
    </Grid>
</Window>
