            TextWrapping="Wrap"
            LostFocus="TextBox_LostFocus"
            Style="{StaticResource RoundedTextBox}"
            PreviewKeyDown="TextBox_PreviewKeyDown"
            IsReadOnly="False"
            />

        <TextBlock
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Text="Your Sins"
            Foreground="White"
            FontFamily="Consolas"
            FontSize="18"
            FontWeight="Heavy"
            VerticalAlignment="Center"
            Margin="20, 0, 0, 5"
            />

        <Button
            Grid.Column="2"
            Grid.Row="0"
            Width="30"
            Height="30"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0, 5, 6.5, 0"
            Content="X"
            Style="{StaticResource HoverButton}"
            Click="ProgramExit"
            WindowChrome.IsHitTestVisibleInChrome="True"
            />
        
        <Button
            Grid.Column="1"
            Grid.Row="23" 
            x:Name="ImmaConfess"
            Width="200"
            Style="{StaticResource HoverButton}"
            Content="I Confess My Sins" 
            Click="ImmaConfess_Click"/>

        <Button
            Grid.Column="0"
            Grid.Row="23" 
            Width="80"
            Style="{StaticResource HoverButton}"
            HorizontalAlignment="Right"
            Content="S"/>
        
        <Button
            Grid.Column="2"
            Grid.Row="23" 
            Width="80"
            Style="{StaticResource HoverButton}"
            HorizontalAlignment="Left"
            Content="D"/>

        <Image
            Grid.Column="1"
            Grid.Row="1"
            x:Name="Normal"
            Source="Images/Normal.png"/>

        <Image
            Grid.Column="1"
            Grid.Row="1"
            x:Name="Sad"
            Source="Images/Sad.png"/>

        <Image
            Grid.Column="1"
            Grid.Row="1"
            x:Name="Smile"
            Source="Images/Smile.png"/>

        <Grid.Background>
            <ImageBrush 
                x:Name="Background"
                ImageSource="/Images/heaven.png" />
        </Grid.Background>
    </Grid>
</Window>
