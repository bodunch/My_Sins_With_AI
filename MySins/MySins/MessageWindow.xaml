<Window x:Class="MySins.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MySins"
        mc:Ignorable="d"
        Title="MessageWindow" Height="200" Width="352"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="Button" x:Key="NoChangeButton">
            <Setter Property="Background" Value="#00FFFFFF"/>
            <Setter Property="Foreground" Value="#1E90FF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                            x:Name="border"
                            Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0" x:Name="HiddenRow"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Column="1"
            Grid.Row="0"
            Text="Please enter the password correctly, no need to try to break the program!"
            TextWrapping="Wrap"
            TextAlignment="Center"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="25"/>

        <Button 
            Grid.Column="1"
            Grid.Row="1"
            Style="{StaticResource NoChangeButton}"
            Background="#00FFFFFF"
            BorderThickness="0"
            x:Name="ShowHiddenPart"
            Content="⌄read more⌄" 
            Click="Toggle_Click" />

        <StackPanel 
            Grid.Column="1"
            Grid.Row="3">
            <TextBlock
                TextWrapping="Wrap">
                My friend, if you managed to get the AI assistant to give you incorrect answers, then 
                I (the programmer who created this application) think that you are doing something wrong with your life. 
                Try walking on the grass, taking a walk, even if just a little, get a girlfriend, a dog, a child. 
                You don't need this kind of life, look for something good. It's not worth your time and space on your computer. 
                Delete this program and relax a little. 
            </TextBlock>
        </StackPanel>

        <Grid.Background>
            <ImageBrush 
                x:Name="Background"
                Stretch="Fill"
                ImageSource="/Images/MessageWindow.png" />
        </Grid.Background>
    </Grid>
</Window>
